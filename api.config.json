{
  "apps": [
    {
      "name": "mle-transcoder",
      "script": "./transcoder/app.js",
      "node_args": ["--inspect", "--expose-gc"],
      "max_memory_restart": "4096M",
      "watch": true,
      "instances": 3,
      "exec_mode": "cluster",
      "ignore_watch": [
        "node_modules"
      ],
      "env": {
        "DYLD_INSERT_LIBRARIES": "/usr/local/Cellar/jemalloc/5.2.1_1/lib/libjemalloc.dylib"
      },
      "log_date_format": "YYYY-MM-DD HH:mm Z",
      "error_file": "./logs/mle_transcoder_error.log",
      "out_file": "./logs/mle_transcoder_output.log",
      "time": true
    },
    {
      "name": "mle-api",
      "script": "server.js",
      "watch": false,
      "ignore_watch": [
        "node_modules"
      ],
      "instances": 4,
      "exec_mode": "cluster",
      "env": {
        "NODE_ENV": "development"
      },
      "env_production": {
        "NODE_ENV": "production"
      },
      "max_memory_restart": "1000M",
      "log_date_format": "YYYY-MM-DD HH:mm Z",
      "error_file": "./logs/mle_api_error.log",
      "out_file": "./logs/mle_api_output.log",
      "time": true
    }
  ]
}